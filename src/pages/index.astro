---
import Landing from '../layouts/LandingLayout.astro';
import Card from '../components/Landing/Card.astro';
import CardMini from '../components/Landing/CardMini.astro'
import Header from '../components/Header/Header.astro'

---
<meta http-equiv="refresh" content="0;url=/normadera/es/" />

<script>
	window.location.pathname = import.meta.env.BASE_URL + 'es/';
	const KNOWN_LANGUAGES = ['es', 'eu', 'en', 'fr'];
	let newLangWithRegion = (window.navigator.userLanguage || window.navigator.language || 'eu-ES').substr(0, 5);
	let newLang = newLangWithRegion.substr(0, 2);
	if (KNOWN_LANGUAGES.includes(newLangWithRegion)) {
		window.location.pathname = import.meta.env.BASE_URL + newLangWithRegion + '/';
	} else if (KNOWN_LANGUAGES.includes(newLang)) {
		window.location.pathname = import.meta.env.BASE_URL + newLang + '/';
	} else {
		window.location.pathname = import.meta.env.BASE_URL + 'es/';
	}
</script>