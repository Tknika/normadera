---
import Landing from "../../layouts/LandingLayout.astro";
import Card from "../../components/Landing/Card.astro";
import CardMini from "../../components/Landing/CardMini.astro";
import LanguageSelect from "../../components/Header/LanguageSelect";
import NormaderaLogo from "../../components/Header/NormaderaLogo.astro";
import TknikaLogo from "../../assets/tknika.png";
import IconDocs from "../../assets/landing/docs.svg";
import IconVideo from "../../assets/landing/video.svg";
import IconGlass from "../../assets/landing/glass.svg";

const KNOWN_LANGUAGE_CODES = ["es", "eu"];
const lang = "eu";
---

<Landing title="Normadera">
	<header>
		<nav class="nav-wrapper" title="Top Navigation">
			<div style="flex-grow: 1;"></div>
			{
				KNOWN_LANGUAGE_CODES.length > 1 && (
					<LanguageSelect lang={lang} client:idle />
				)
			}
		</nav>
	</header>
	<main>
		<h1><NormaderaLogo size={60} /><span class="title">Normadera</span></h1>
		<p class="instructions">
			Egitura-erabilerako zura ezaugarritzeko prestakuntzako <b
				>eskuliburu teknikoa</b
			>. <a href="0-introduccion">Informazio gehiago</a>
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="1-la-gestion-forestal"
				title="1. Baso kudeaketa"
				body="Unitate honetan, mendiaren eta basoaren kontzeptuak azaltzen dira, baso-legeria zehazten da, eta baso-espazioak kudeatzeko egoera eta tresnak adierazten dira."
			/>
			<Card
				href="2-identificacion-fichas-tecnicas-madera"
				title="2. Zuraren identifikazioa eta fitxa teknikoak"
				body="Jarraian, bi helburu ematen dira aditzera: alde batetik, zura identifikatzea eta, bestetik, 61 zuren fitxa teknikoak azaltzea."
			/>
			<Card
				href="3-procesado-de-la-madera"
				title="3. Zura prozesatzea"
				body="Unitate didaktiko honetan, Douglas izei-espeziearen kudeaketa azalduko da, landatzen denetik sailkatzen den arte, prozesu bakoitzean jarraitu beharreko laneko segurtasun-baldintzak barne direla."
			/>
			<Card
				href="4-marcado-ce-clasificacion-douglas"
				title="4. Douglas izeiaren CE marka eta begizko sailkapena"
				body="Unitate honetan, zuraren CE marka ezartzeko finkatutako eskakizunak azalduko dira eta Douglas izeia begiz sailkatzeko metodologiari buruzko atal didaktikoak jasoko dira."
			/>
			<Card
				href="5-clasificacion-caracterizacion-madera-estructural"
				title="5. Egitura-zuraren sailkapena eta hura ezaugarritzeko prozesua"
				body="Unitate honetan, Douglas izeiaren zura ezaugarritzeko jarraitutako prozesu osoa zehazten da; zuhaitza zutik dagoenetik hasita, laborategiko saiakuntzetara iritsi arte. Era berean, espezie horretarako egindako begizko sailkapenaren eskuliburu didaktikoa barnean hartzen da."
			/>
			<Card
				href="6-diseÃ±o de estructuras de madera"
				title="6. Zurezko egituren diseinua"
				body="Unitate honetan, zurezko egiturak diseinatu eta kalkulatzeari buruzko atal didaktikoak jorratuko dira, Cad-Work programa erabilita."
			/>
		</ul>
	</main>
	<main>
		<ul role="list" class="link-minicard-grid">
			<CardMini
				href="/"
				title="Espezieen fitxak"
				image={IconDocs}
			/>
			<CardMini
				href="/"
				title="Bideoak"
				image={IconVideo}
			/>
			<CardMini
				href="/"
				title="Gako dikotomikoa"
				image={IconGlass}
			/>
		</ul>
	</main>
	<div class="footer">
		<a href="https://www.tknika.eus">
			<img src={TknikaLogo} alt="Tknika logo" width="300" />
		</a>
	</div>
</Landing>

<style>
	html {
		background: url(/src/assets/landing/forest_gradient.png) no-repeat
			center center fixed;
		-webkit-background-size: cover;
		-moz-background-size: cover;
		-o-background-size: cover;
		background-size: cover;
		--theme-text-accent: hsla(41, 100%, 59%, 1);
	}
	body {
		margin: 0px;
	}
	header {
		z-index: 11;
		height: var(--theme-navbar-height);
		width: 100%;
		background-color: var(--theme-navbar-bg);
		//color: hsla(var(--color-base-white), 100%, 1);;
		color: white;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		position: sticky;
		top: 0;
	}
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 2rem;
		transition: font-size 1s;
		font-weight: 800;
		color: hsla(41, 100%, 59%, 1);
		background-size: 400%;
		margin: 0;
		text-align: center;
		display: grid;
		grid-template-columns: repeat(1, min-content);
		align-content: center;
		justify-content: center;
		place-items: center;
	}
	a {
		color: hsla(41, 100%, 59%, 1);
		font-weight: 500;
	}

	.nav-wrapper {
		display: flex;
		align-items: center;
		justify-content: flex-end;
		gap: 1em;
		width: 100%;
		max-width: 82em;
		padding: 0 1rem;
		padding-top: 1rem;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		font-size: 1.25rem;
		color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
	.link-minicard-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(14ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
	.footer {
		margin: 0 auto;
		padding-top: 1rem;
		padding-bottom: 1rem;
		position: relative;
		width: 100%;
		background: black;
		color: white;
		text-align: center;
	}

	@media (min-width: 30em) {
		h1 {
			font-size: 3rem;
		}
	}

	@media (min-width: 40em) {
		h1 {
			font-size: 4rem;
			display: block;
		}
		.title {
			margin-left: 10px;
		}
	}
</style>
